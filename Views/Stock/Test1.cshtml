@using FirstTrade_.Models.Services
<script src="~/Scripts/Chart.min.js"></script>

@model IEnumerable<FirstTrade_.Models.Services.StockVM2>

@{
    ViewBag.Title = "Test1";
    var jsonMonths = Json.Encode(ViewBag.MonthLabel);
    var jsonErrDev = Json.Encode(Model);
    var criteria = ViewBag.Criteria as RegistersCriteria;
}

<h2>Test1</h2>

<canvas id="LineChart"></canvas>

<script>
    var jsErrDev = @Html.Raw(jsonErrDev);
    var ctx = document.getElementById("LineChart");
    var chart = new Chart(ctx, {
        type: 'line',
        data: {
            @*labels:@Html.Raw(jsonMonths),*@
            labels:@Html.Raw(jsonMonths),
            datasets: [{
                label: jsErrDev[0].dev,
                data: jsErrDev[0].price,
            }]
        },
        options: {
            responsive: true,
            title: {
                display: true,
                fontSize: 26,
                text: 'Min and Max Settings'
                },
            scales: {
                xAxes: [{
                    display: true,
                    scaleLabel: {
                        display: true,
                        labelString: '日期',
                        fontSize: 15
                    }
                }],
                yAxes: [{
                    display: true,
                    scaleLabel: {
                        display: true,
                        labelString: '元/每股',
                        fontSize: 15
                    },
                    ticks: {
                        max: Math.round(jsErrDev[0].UpL*11/10),
                        min: Math.round(jsErrDev[0].DownL * 9 / 10),
                        stepSize: Math.round((jsErrDev[0].UpL - jsErrDev[0].DownL)*3/10),
                        //reverse: true,
                    }




                }]
            }
        }
    }
    );
</script>

